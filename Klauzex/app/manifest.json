			[
				"storage"
			]
		}
	],

	"background" : {
		"scripts" : ["clauseRepository.js", "backgroundScripts/algosyBackground.js", "sentences.js", "eventPage.js"],
		"persistent" : true,
		"permissions" :
		[
			"storage",
			"alarms"
		]
	},

	"permissions" :
	[
		"storage",
		"alarms"
	]

}
