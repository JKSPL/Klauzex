{
	"manifest_version" : 2,
	"name" : "Klauzex",
	"description" : "Klauzex",
	"version" : "1.0",

	"content_scripts" :
	[{
			"matches" : ["<all_urls>"],
            "css": ["css/ns-default.css", "css/ns-style-bar.css", "css/style.css"],
			"js" : ["thirdParty/jquery-3.1.1.min.js", "thirdParty/mark.js","thirdParty/modernizr.custom.js", "thirdParty/classie.js", "thirdParty/notificationFx.js", "algosy.js", "ui.js", "sentences.js", "contentScript.js", "clauseRepository.js"],
