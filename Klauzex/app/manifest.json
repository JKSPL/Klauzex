{
	"manifest_version" : 2,

	"name" : "Klauzex",
	"description" : "Klauzex",
	"version" : "1.0",

	"content_scripts" :
	[{
			"matches" : ["<all_urls>"],
			"js" : ["contentScript.js", "clauseRepository.js", "algosy.js"],
			"permissions" :
			[
				"storage"
			]
		}
	],

	"background" : {
		"scripts" : ["clauseRepository.js", "eventPage.js"],
		"persistent" : true,
		"permissions" :
		[
			"storage",
			"alarms"
		]
	},

	"permissions" :
	[
		"storage",
		"alarms"
	]

}
